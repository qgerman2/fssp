{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe compilar archivo activo",
            "command": "cl.exe",
            "args": [
                // Opciones del compilador
                "/EHsc",
                "/nologo",
                "/I${workspaceFolder}\\host\\include",
                // Salida
                "/Fo${workspaceFolder}\\host\\out\\",
                "/Fd${workspaceFolder}\\host\\out\\",
                "/Fe${workspaceFolder}\\host\\out\\host.exe",
                // CÃ³digo a compilar
                "${workspaceFolder}\\host\\**.cpp",
                // Librerias
                "/I${workspaceFolder}\\host\\lib",
                "${workspaceFolder}/host/lib/FSUIPC_User.lib",
                "User32.lib",   // Dependencia de FSUIPC
                "Ws2_32.lib",
                "/link",
                "/NODEFAULTLIB:LIBC.LIB",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tarea generada por el depurador."
        }
    ],
    "version": "2.0.0"
}