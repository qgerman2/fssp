{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Compilar 32-bit",
            "command": "g++",
            "args": [
				"-static",
				"-static-libgcc",
				"-static-libstdc++",
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}\\fssp\\*.cpp",
                "-o",
                "${workspaceFolder}\\build\\fssp.exe",
				"-I${workspaceFolder}\\fssp\\include",
				"-I${workspaceFolder}\\libraries",
				"-L${workspaceFolder}\\libraries\\FSUIPC",
				"-L${workspaceFolder}\\libraries\\ftxui",
				"-l:FSUIPC_User.a",
				"-lftxui-component",
				"-lftxui-dom",
				"-lftxui-screen",
				"-lws2_32"
            ],
            "options": {
                "cwd": "${fileDirname}",
				"env": {
					"PATH": "C:\\windows\\system32;C:\\msys64\\mingw32\\bin"
				},
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tarea generada por el depurador."
        },
		{
            "type": "cppbuild",
            "label": "Compilar 64-bit",
            "command": "g++",
            "args": [
				"-static",
				"-static-libgcc",
				"-static-libstdc++",
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}\\fssp\\*.cpp",
                "-o",
                "${workspaceFolder}\\build\\fssp64.exe",
				"-I${workspaceFolder}\\fssp\\include",
				"-I${workspaceFolder}\\libraries",
				"-L${workspaceFolder}\\libraries\\FSUIPC",
				"-L${workspaceFolder}\\libraries\\ftxui",
				"-l:FSUIPC_User64.a",
				"-lftxui-component64",
				"-lftxui-dom64",
				"-lftxui-screen64",
				"-lws2_32"
            ],
            "options": {
                "cwd": "${fileDirname}",
				"env": {
					"PATH": "C:\\windows\\system32;C:\\msys64\\mingw64\\bin"
				},
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tarea generada por el depurador."
        }
    ],
    "version": "2.0.0"
}